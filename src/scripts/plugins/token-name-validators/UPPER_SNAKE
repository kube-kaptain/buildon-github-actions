#!/usr/bin/env bash
# SPDX-License-Identifier: MIT
# Copyright (c) 2025-2026 Kaptain contributors (Fred Cooke)
#
# UPPER_SNAKE - Validates token names follow UPPER_SNAKE_CASE convention
#
# Valid: MY_VAR, MY_VAR_2, MY_2_VAR, 2_MY_VAR, A, MY_CATEGORY/MY_SUB_VAR
# Invalid: my_var, my-var, myVar, MyVar
#
# Usage:
#   UPPER_SNAKE <directory>
#
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# shellcheck source=src/scripts/defaults/platform.bash
source "${SCRIPT_DIR}/../../defaults/platform.bash"
# shellcheck source=src/scripts/lib/log.bash
source "${SCRIPT_DIR}/../../lib/log.bash"

if [[ ${#} -ne 1 ]]; then
  log_error "Usage: UPPER_SNAKE <directory>"
  exit 1
fi

DIR="${1}"

if [[ ! -d "${DIR}" ]]; then
  log_error "Directory not found: ${DIR}"
  exit 1
fi

# Pattern: each path segment must be UPPER_SNAKE (uppercase letters, digits, underscores)
# Regex per segment: ^[A-Z0-9][A-Z0-9_]*[A-Z0-9]$|^[A-Z0-9]$
is_valid_name() {
  local name="${1}"

  # Split by / and validate each segment
  local segment
  while IFS= read -r segment; do
    # Single character: must be uppercase letter or digit
    if [[ ${#segment} -eq 1 ]]; then
      if [[ ! "${segment}" =~ ^[A-Z0-9]$ ]]; then
        return 1
      fi
    else
      # Multi-character: start/end with uppercase letter or digit, middle can have underscores
      if [[ ! "${segment}" =~ ^[A-Z0-9][A-Z0-9_]*[A-Z0-9]$ ]]; then
        return 1
      fi
    fi
  done <<< "${name//\//$'\n'}"

  return 0
}

invalid_names=()

while IFS= read -r -d '' file; do
  # Get relative path from directory
  rel_path="${file#"${DIR}"/}"

  if ! is_valid_name "${rel_path}"; then
    invalid_names+=("${rel_path}")
  fi
done < <(find "${DIR}" -type f -print0)

if [[ ${#invalid_names[@]} -gt 0 ]]; then
  log_error "Invalid UPPER_SNAKE token names:"
  for name in "${invalid_names[@]}"; do
    log "  ${name}"
  done
  exit 1
fi

exit 0
